{
  "name": "ImGui",
  "keywords": "imgui",
  "description": "Dear ImGui",
  "repository":
  {
    "type": "git",
    "url": "https://github.com/p3p/imgui.git"
  },
  "version": "1.81.1",
  "authors":
  [
    {
        "url": null,
        "maintainer": false,
        "email": "p3p@p3psoft.co.uk",
        "name": "Chris Pepper"
    }
  ],
  "frameworks": "*",
  "platforms": "native",

  "build": {
    "srcDir": "",
    "includeDir": "",
    "srcFilter": [
      "+<./*.cpp>",
      "-<examples>",
      "-<docs>",
      "-<backends>",
      "-<misc>",
      "+<backends/imgui_impl_opengl3.cpp>",
      "+<backends/imgui_impl_sdl.cpp>"
    ],
    "flags": [
      "-I backends",
      "-DIMGUI_IMPL_OPENGL_LOADER_GLAD"
    ]
  }
}

